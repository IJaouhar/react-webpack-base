{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "importHelpers": true,
      "declaration": false,
      "esModuleInterop": true,
      "outDir": "./dist/",
      "rootDir": ".",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2018",
      "jsx": "react",
      "lib": ["es2018", "dom"],
      "types": ["node", "jest"],
      "paths": {
          "statics/*": ["src/statics/*"]
      }
  },
  "include": ["src/**/*"],
  "exclude": ["*.json", "*.tsx"]
}